.input
  height: 40px
  width 100%
  padding: 0 33px;
  font-family: 'MontserratAlternates-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: #2B2B2B
  border: 1px solid #2B2B2B
  border-radius: 10px;
  background: #fff
  position relative
  overflow hidden
  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s

  &:hover
    border 1px solid #335750
  &:focus
    color: #2B2B2B
    caret-color: #335750
    border 1px solid #335750
    box-shadow: 3px 3px 20px 0px #335750
    &::placeholder
      color: #2B2B2B
  &::placeholder
    color: #2B2B2B
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 45px
  +above($breakpoints.md)
    padding: 0 25px;
    font-size: 18px;
    height: 53px
  +above($breakpoints.xxl)
    padding: 0 33px;
    font-size: 20px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 33px
    resize: none
    height: 70px
    width 280px
    &::placeholder
      white-space pre-line
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      width 215px
      height: 100px
    +above($breakpoints.md)
      border-radius: 15px
      padding: 17px 10px 10px 25px
      width 285px
      height: 116px;
    +above($breakpoints.xxl)
      border-radius: 20px
      padding: 25px 10px 10px 30px
      width 350px
      height: 130px

  &--secondary
    border: 1px solid #fff

  &--tel
    font-family: 'Jost-Regular'
