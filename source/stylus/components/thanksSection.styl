.thanks-section
  display: flex
  flex-direction: column
  justify-content center
  align-items: center
  height: 100%

  &__container
    text-align: center

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width 280px
    +above($breakpoints.md)
      max-width 330px
    +above($breakpoints.xxl)
      max-width 370px

.thanks-page
  background-color #BAC8C3
